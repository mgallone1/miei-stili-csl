<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Journal of Clinical Medicine (con DOI e PubMed)</title>
    <id>http://www.zotero.org/styles/journal-of-clinical-medicine-doi-pubmed</id>
    <link href="http://www.mdpi.com/journal/jcm" rel="self"/>
    <author>
      <name>OpenAI GPT</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-06-07T12:00:00+00:00</updated>
  </info>

  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="first" initialize-with="." delimiter=", "/>
      <label form="short" prefix=", " text-case="lowercase"/>
    </names>
  </macro>

  <macro name="title">
    <text variable="title" suffix=". "/>
  </macro>

  <macro name="container-title">
    <text variable="container-title" font-style="italic"/>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="volume-issue">
    <group delimiter=", ">
      <text variable="volume" font-weight="bold"/>
      <text variable="page"/>
    </group>
  </macro>

  <macro name="DOI">
    <group>
      <text value="[CrossRef]" prefix=" " suffix=" "/>
      <text variable="DOI" prefix="https://doi.org/"/>
    </group>
  </macro>

  <macro name="PMID">
    <group>
      <text value="[PubMed]" prefix=" " suffix=" "/>
      <text variable="PMID" prefix="https://pubmed.ncbi.nlm.nih.gov/"/>
    </group>
  </macro>

  <citation>
    <layout prefix="[" suffix="]" delimiter=", ">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <bibliography>
    <layout hanging-indent="true" delimiter=". ">
      <text macro="author" suffix=";"/>
      <text macro="title"/>
      <text macro="container-title" suffix=" "/>
      <text macro="issued" suffix=", "/>
      <text macro="volume-issue" suffix="."/>
      <text macro="DOI"/>
      <text macro="PMID"/>
    </layout>
  </bibliography>
</style>
